@attribute [Route(Constants.PathToDashboardUpload)]
@attribute [Authorize]

<h1 class="mb-4 text-4xl font-bold leading-none tracking-tight">Datei Hochladen</h1>

<form method="post" action="/api/v1/upload/user" enctype="multipart/form-data">
    <div class="flex items-center justify-center w-full">
        <label for="dropzone-file" class="flex flex-col items-center justify-center w-full h-64 border-2 border-neutral-200 border-dashed rounded-lg cursor-pointer bg-neutral-100 dark:hover:bg-neutral-400 dark:bg-neutral-800 hover:bg-neutral-200 dark:border-neutral-600 dark:hover:border-neutral-500 dark:hover:bg-neutral-700">
            <div class="flex flex-col items-center justify-center pt-5 pb-6">
                <svg class="h-10 w-auto mb-3 fill-neutral-400" version="1.1" id="lni_lni-cloud-upload" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 64 64" style="enable-background:new 0 0 64 64;" xml:space="preserve">
                    <path d="M34.6,27.1c-0.6-0.6-1.4-0.9-2.2-0.9c0,0,0,0,0,0c-0.8,0-1.6,0.3-2.2,0.9L25.5,32c-0.9,0.9-0.8,2.3,0.1,3.2 c0.9,0.9,2.3,0.8,3.2-0.1l1.5-1.5v7.7c0,1.2,1,2.3,2.3,2.3c1.2,0,2.3-1,2.3-2.3v-7.7l1.5,1.5c0.4,0.5,1,0.7,1.6,0.7 c0.6,0,1.1-0.2,1.6-0.6c0.9-0.9,0.9-2.3,0.1-3.2L34.6,27.1z"/>
                    <path d="M57.3,23.6c-2.7-2.9-6.4-4.8-10.3-5.5c-2.2-3.4-5.4-5.9-9.1-7.2c-1.7-0.6-3.7-1-5.8-1c-9.4,0-17.2,7.2-17.8,16.3 C7.2,27.1,1.8,33,1.8,40.1c0,7.7,6.3,13.9,14.1,13.9c0,0,0,0,0,0h27.8c10.2,0,18.6-8.1,18.6-18.1C62.3,31.4,60.5,27,57.3,23.6z M43.7,49.6H16c-5.5,0-9.7-4.2-9.7-9.4c0-5.3,4.3-9.4,9.7-9.4h0.5c1.2,0,2.3-1,2.3-2.3v-1c0-7.2,6-13,13.3-13c1.6,0,3,0.2,4.3,0.7 c3.1,1,5.7,3.2,7.3,6.1c0.4,0.6,1,1.1,1.7,1.1c3.3,0.3,6.5,1.9,8.7,4.3c2.4,2.6,3.7,5.9,3.7,9.3C57.8,43.5,51.4,49.6,43.7,49.6z"/>
                </svg>
                <p class="mb-2 text-sm text-neutral-600 dark:text-neutral-300"><span class="font-semibold">Drag and Drop</span> oder klicken</p>
                <p class="text-xs text-neutral-500 dark:text-neutral-400">PNG, JPG, GIF, TXT, PDF oder JAR (MAX. @(Constants.MaxFileSizeInBytes / 1000000)MB)</p>
            </div>
            <input id="dropzone-file" name="file" type="file" class="hidden" @bind="filePath" />
        </label>
    </div> 

    @if (filePath != null)
    {
        <button type="submit" class="relative flex h-11 w-full items-center justify-center px-6 before:absolute before:inset-0 before:rounded-full before:bg-blue-500 before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95 sm:w-max mt-3">
            <span class="relative text-base font-semibold text-white">
                @Path.GetFileName(filePath) Hochladen
            </span>
        </button>
    }
</form>

@code {
    private string? filePath;
}
